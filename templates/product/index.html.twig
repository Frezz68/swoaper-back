{% extends 'base.html.twig' %}

{% block title %}Swoaper - boutique{% endblock %}

{% block body %}
    <div class="w-full bg-white flex flex-row justify-center items-center">
        <section class="w-4/5 flex justify-center flex-col py-20">
            <div class="w-full flex flex-row">
            </div>
            <div class="w-full flex flex-row">
                <div class="w-1/6">
                    <div class="w-full mt-4 mx-32">
                        <div class="border-b border-gray-blue w-full mb-4 pb-4">
                            <div class="flex flex-row justify-between mb-2">
                                <h3>Marques</h3>
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                            <ul class="hidden flex-col">
                                <button onclick="">Nike</button>
                                <button onclick="">Adidas</button>
                                <button onclick="">New Balance</button>
                            </ul>
                        </div>
                        <div class="border-b border-gray-blue w-full mb-4 pb-4">
                            <div class="flex flex-row justify-between mb-2">
                                <h3>Tailles</h3>
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                            <ul class="hidden flex-col">
                                <li>Nike</li>
                                <li>Adidas</li>
                                <li>New balance</li>
                            </ul>
                        </div>
                        <div class="border-b border-gray-blue w-full mb-4 pb-4">
                            <div class="flex flex-row justify-between mb-2">
                                <h3>Sexe</h3>
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                            <ul class="hidden flex-col">
                                <li>Nike</li>
                                <li>Adidas</li>
                                <li>New balance</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="w-full flex justify-center">
                    <div class="w-11/12">
                        <div class="w-full flex flex-row flex-wrap justify-start items-center mb-20 pl-[100px]">
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="w-1/2 flex items-center">
                                    <p>Trier par : </p>
                                    {{ form_start(groupByForm) }}
                                    {{ form_widget(groupByForm.groupBy, {'attr': {'class': 'border-0 outline-0 outline-none'}}) }}
                                    {{ form_end(groupByForm) }}
                                </div>
                                <div class="w-1/2 text-right pr-[100px]">
                                    <a href="{{ path('app_store_new') }}" class="font-medium text-white text-lg bg-dark-blue px-5 py-4 w-60 drop-shadow-lg color-white rounded-lg">Créer un produit</a>
                                </div>
                            {% else %}
                                <p>Trier par : </p>
                                {{ form_start(groupByForm) }}
                                {{ form_widget(groupByForm.groupBy, {'attr': {'class': 'border-0 outline-0 outline-none'}}) }}
                                {{ form_end(groupByForm) }}
                            {% endif %}
                        </div>
                        <div class="w-full flex flex-row flex-wrap justify-center items-center mb-20 items-stretch">
                            <!-- Carte pour afficher les blocs à venir sur la v1 du site -->
                            <div class="w-full flex justify-center items-center" id="card-coming-soon">
                                <div class="max-w-sm p-6 bg-white shadow-xl rounded-lg  flex justify-center items-center flex-col">
                                    <svg class="w-14 h-14 mb-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path fill="#253784" d="M208 64a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zM9.8 214.8c5.1-12.2 19.1-18 31.4-12.9L60.7 210l22.9-38.1C99.9 144.6 129.3 128 161 128c51.4 0 97 32.9 113.3 81.7l34.6 103.7 79.3 33.1 34.2-45.6c6.4-8.5 16.6-13.3 27.2-12.8s20.3 6.4 25.8 15.5l96 160c5.9 9.9 6.1 22.2 .4 32.2s-16.3 16.2-27.8 16.2H288c-11.1 0-21.4-5.7-27.2-15.2s-6.4-21.2-1.4-31.1l16-32c5.4-10.8 16.5-17.7 28.6-17.7h32l22.5-30L22.8 246.2c-12.2-5.1-18-19.1-12.9-31.4zm82.8 91.8l112 48c11.8 5 19.4 16.6 19.4 29.4v96c0 17.7-14.3 32-32 32s-32-14.3-32-32V405.1l-60.6-26-37 111c-5.6 16.8-23.7 25.8-40.5 20.2S-3.9 486.6 1.6 469.9l48-144 11-33 32 13.7z"/></svg>
                                    <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white text-center">Coming soon</h5>
                                    <p class="mb-3 font-normal text-gray-500 dark:text-gray-400 mb-10">Feature en cours de développement !</p>
                                    <div class="w-full flex justify-center">
                                        <a target="_blank" rel="noopener noreferrer" href="https://www.instagram.com/swoaper/" class="border-4 border-gray-blue text-gray-600 font-bold py-2 px-4 rounded-lg hover:border-light-blue hover:text-light-blue ease-out duration-100">Instagram</a>
                                    </div>
                                </div>
                            </div>
                            <!-- {% for product in products %}
                                        <div class="w-1/4 m-5 hover:scale-105 ease-out duration-300 self-auto max-h-full border-2 border-gray-blue rounded-lg px-10 py-5">
                                            <a href="{{ path('app_store_show', {'id': product.id}) }}" class="">
                                                <div class="w-full flex justify-center mt-4 mb-8">
                                                    <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.productName}}" class="h-40 w-auto" />
                                                </div>
                                                <h3 class="text-xl font-medium mb-2 text-3xl">{{ product.productName }}</h3>
                                                <p class="font-bold text-2xl mb-5">{{ product.price }} $</p>
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <div class="flex justify-center">
                                                        <a href="{{ path('app_store_edit', {'id': product.id}) }}" class="hover:text-light-blue">Editer la paire</a>
                                                    </div>
                                                {% endif %}
                                            </a>
                                        </div>
                            {% else %} -->
                                <span>Aucune paire en vente actuellement</span>
                            {% endfor %}
                        <div class="w-full flex justify-center items-center">
                            <a href="" class="flex flex-row justify-center items-center">
                                <!-- <p class="mr-4 font-medium">Voir plus</p>
                                <i class="fa-solid fa-chevron-right"></i> -->
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
